- ["..l.Name.."]: "..i;if ChatSpy.Public then g:FireServer(ChatSpy.Chat.Text,"All")else b:SetCore("ChatMakeSystemMessage",ChatSpy.Chat)end end end end;local q=a:GetPlayers()for j=1,#q do local r=q[j]r.Chatted:Connect(function(i)ChatSpy.onChatted(r,i)end)end;a.PlayerAdded:Connect(function(r)r.Chatted:Connect(function(i)ChatSpy.onChatted(r,i)end)end)ChatSpy.Chat.Text="[Daddy Legend] - "..(ChatSpy.Enabled and"Enabled."or"Disabled.")b:SetCore("ChatMakeSystemMessage",ChatSpy.Chat)local s=d.PlayerGui.Chat.Frame;s.ChatChannelParentFrame.Visible=true;s.ChatBarParentFrame.Position=s.ChatChannelParentFrame.Position+UDim2.new(UDim.new(),s.ChatChannelParentFrame.Size.Y)
